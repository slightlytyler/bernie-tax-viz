  flex: 1
  flex-direction: column
  justify-content: center
  align-items: center
  width: 100%

  @media (max-width: 1024px)
    flex: 0 1 auto
    font-size: .9em
    padding: 3rem 0
    border-bottom: 1px solid #C1C3C9

  .table
    border-collapse: separate
    border-spacing: 1em

