.item
  display: flex
  width: 100%
  font-size: 3em

  &:not(:last-child)
    border-bottom: 1rem solid $white

  .title, .savings
    display: flex
    justify-content: center
    align-items: center
    padding: .5em

  .title
    flex: 9
    border-right: .5rem solid $white

  .savings
    flex: 5
    font-size: 75%