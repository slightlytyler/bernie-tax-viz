.title
  margin-bottom: .5em
  font-size: 3em
  font-weight: bold

.blurb
  max-width: 40em
  margin-bottom: 2em
  font-size: 1.2em

.inputs
  list-style: none
  display: flex
  justify-content: flex-start
  align-items: flex-end
  padding: 0

  .item
    font-size: 1.5em;

    &:not(:last-child)
      margin-right: 2em;

    .label
      margin-right: 1em

    .input
      padding: .25em;
      font-size: 1em
      border: 1px solid currentColor
      border-radius: 4px