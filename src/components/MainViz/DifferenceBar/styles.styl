.difference-bar
  position: relative
  width: 100%
  height: 6em
  margin: 1em 0
  background-color: #E7E9EF

  .negative, .positive, .origin
    content: ''
    position: absolute

  .negative, .positive
    top: 0
    height: 100%
    border-color: white
    border-style: solid
    border-width: 0

  .negative
    left: 0
    background-color: #F07366
    border-right-width: .25em

  .positive
    right: 0
    background-color: #5BD4B9
    border-left-width: .25em

  .origin
    position: absolute
    left: 50%
    top: 50%
    transform: translate(-50%, -50%)
    width: 2px
    height: 110%
    background-color: #505460