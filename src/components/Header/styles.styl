.header
  height: 12rem
  background-color: #147fd7
  box-shadow: 0px 0px 2px 0px rgba(0,0,0,0.12), 0px 2px 2px 0px rgba(0,0,0,0.24)

  .container
    display: flex
    justify-content: flex-start
    align-items: center
    position: relative
    height: 100%
    padding: 1rem 6rem

  .hitbox
    z-index: 2
    position: absolute
    left: 0
    top: 0
    width: 40em
    height: 100%

  .text
    z-index: 1
    width: auto
    height: 100%

  .vector
    z-index: 0
    position: absolute
    left: 17rem
    bottom: 0
    width: auto
    height: 95%
