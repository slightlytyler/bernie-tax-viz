.footer
  display: flex
  flex-direction: column
  align-items: flex-end
  padding: 4rem 6rem
  color: #C1C3C9
  background-color: #EEEFF4

  @media (max-width: 1024px)
    padding: 2rem 2rem
    font-size: 1.1em

  .container
    @media (max-width: 1024px)
      width: 100%

  .row:not(:last-child)
    margin-bottom: .5rem

  .links, .credit
    font-size: 1.5em

  .links
    display: flex

    .inner
      position: relative

    &.special
      margin-bottom: 1em
      &:hover .border
        color: #147fd7

      .border
        z-index: 0
        position: absolute
        left: -.25em
        top: -.25em
        width: calc(100% + .5em)
        height: calc(100% + .5em)
        border: 1px solid currentColor
        border-radius: 4px
        pointer-events: none

        @media (max-width: 1024px)
          color: #147fd7

    &:not(.special)
      @media (max-width: 1024px)
        font-size: 1em

    .item
      z-index: 1
      text-decoration: none

      &:not(:last-child):after
        content: '-'
        display: inline-block
        margin: 0 .2em

  .link
    cursor: pointer
    color: inherit

    &:hover
      text-decoration: underline
      color: #98999E

  .icon
    display: inline
    width: 1em

    &.twitter
      transform: translateY(.175em)

    &.heart
      margin: 0 .1em
      transform: translateY(.1em)

  .credit
    @media (max-width: 1024px)
      font-size: 1em

    .link
      text-decoration: underline

  .disclaimer
    margin-top: 1em
    font-weight: 300

    @media (max-width: 1024px)
      font-size: .75em
