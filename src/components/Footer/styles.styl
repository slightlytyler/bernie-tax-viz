.footer
  display: flex
  flex-direction: column
  align-items: flex-end
  padding: 4rem 6rem
  color: #C1C3C9
  background-color: #EEEFF4

  .row:not(:last-child)
    margin-bottom: .5rem

  .links, .credit
    font-size: 1.5em

  .links
    display: flex

    .item
      &:not(:last-child):after
        content: '-'
        display: inline-block
        margin: 0 .2em

  .link
    color: inherit

  .credit
    .heart
      display: inline
      width: 1em
      margin: 0 .1em
      transform: translateY(.1em)

    .link
      text-decoration: underline

  .disclaimer
    font-weight: 300
