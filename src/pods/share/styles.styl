.base
  display: flex
  flex-direction: column

  min-height: 100vh

.main
  display: flex
  flex-direction: column
  flex: 1
  padding: 2rem 6rem 4rem
  background-color: #F5F6FB

  .sections
    position: relative
    display: flex
    flex: 1
    justify-content: space-between
    align-items: center

  .loading
    position: absolute
    left: 50%
    top: 50%
    transform: translate(-50%, -50%)
    font-size: 3em
    color: #C1C3C9
